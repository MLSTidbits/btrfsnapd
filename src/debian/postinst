#!/bin/bash

# Automatically added by dh_installinit
case "$1" in
    configure)
        # Enable the service or reload the daemon
        if systemctl is-active --quiet btrfs-snapshot-manager.timer ; then
            systemctl reload b-tree-snapshots.timer
        else
            systemctl enable --now b-tree-snapshots.timer
        fi
    ;;
    abort-upgrade|abort-remove|abort-deconfigure)
    ;;
    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 0
    ;;
esac
